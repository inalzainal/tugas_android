<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tv_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_full_name"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Nama Lengkap" />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_email"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Email" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Password" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_phone"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_phone"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Nomor Telepon" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="#7b8ef8"
        android:text="Buat Akun" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="#4fe35e"
        android:onClick="onButtonClickLogin"
        android:text="Sudah punya akun ? Login"
        android:textAllCaps="false" />

    android:clickable="true"
    android:onClick="click"
</RelativeLayout>